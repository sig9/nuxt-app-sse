    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "dbg node",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "name": "dbg node2",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            //"runtimeExecutable": "yarn",
            // "runtimeArgs": [
            //     "run",
            //     "dev"
            // ],
            "args": ["dev"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "osx": {
                "program": "${workspaceFolder}/node_modules/.bin/nuxt-ts"
              },
              "linux": {
                "program": "${workspaceFolder}/node_modules/.bin/nuxt-ts"
              },
              "windows": {
                "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.mjs"
              }
        }
    ]
}



